<odoo>
 
    <record id = "view_partner_form"
            model = "ir.ui.view">
        <field name = "name">res.partner.form.ext</field>
        <field name = "model">res.partner</field>
        <field name = "inherit_id"
               ref = "base.view_partner_form"/> 
        <field name = "arch"
               type = "xml">
            <field name = "category_id"
                   position = "after"> 
                <field name = "is_teacher"/>
                <field name = "is_student"/>
            </field>
            <xpath expr = "//field[@name='vat']/.."
                   position = "inside"> 
                <field name = "is_freelance"/>
            </xpath>
        </field>
    </record>

    <record id = "teacher_tree_view"
            model = "ir.ui.view">
        <field name = "name">teacher_tree_view</field>
        <field name = "model">res.partner</field>
        <field name = "arch"
               type = "xml">
            <tree string = "Teachers">
                <field name = "display_name"/>
                <field name = "phone"/>
                <field name = "email"/>
                <field name = "vat"/>
                <field name = "is_teacher"/>
                <field name = "is_freelance"/>
            </tree>
        </field>
    </record>

    <record id = "teacher_form_view"
            model = "ir.ui.view">
        <field name = "name">teacher.form.view</field>
        <field name = "model">res.partner</field>
        <field name = "arch"
               type = "xml">
            <form string = "Teacher">
                <sheet>
                    <group>
                        <field name = "name" required="1"/>
                        <field name = "phone"/>
                        <field name = "email" required="1"/>
                        <field name = "vat"/>
                        <field name = "is_teacher"/>
                        <field name = "is_freelance"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id = "student_tree_view"
            model = "ir.ui.view">
        <field name = "name">student_tree_view</field>
        <field name = "model">res.partner</field>
        <field name = "arch"
               type = "xml">
            <tree string = "Students">
                <field name = "display_name"/>
                <field name = "phone"/>
                <field name = "email" />
                <field name = "vat"/>
                <field name = "is_student"/>
            </tree>
        </field>
    </record>

     <record id = "student_form_view"
            model = "ir.ui.view">
        <field name = "name">student.form.view</field>
        <field name = "model">res.partner</field>
        <field name = "arch"
               type = "xml">
            <form string = "Students">
                <sheet>
                    <group>
                        <field name = "name" required="1"/>
                        <field name = "phone"/>
                        <field name = "email" required="1"/>
                        <field name = "vat"/>
                        <field name = "is_student"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id = "teacher_action"
            model = "ir.actions.act_window">
        <field name = "name">Teachers</field>
        <field name = "res_model">res.partner</field>
        <field name = "view_mode">tree,form</field>
        <field name = "domain">[('is_teacher', '=', True)]</field>
        <field name="context">{'default_is_teacher': True}</field> 
        <field name = "view_ids"
               eval = "[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('teacher_tree_view')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('teacher_form_view')})]"/>
    </record>


    <record id = "student_action"
            model = "ir.actions.act_window">
        <field name = "name">Student</field>
        <field name = "res_model">res.partner</field>
        <field name = "view_mode">tree,form</field>
        <field name = "domain">[('is_student', '=', True)]</field>
        <field name="context">{'default_is_student': True}</field>
        <field name = "view_ids"
               eval = "[(5, 0, 0),
                            (0, 0, {'view_mode': 'tree', 'view_id': ref('student_tree_view')}),
                            (0, 0, {'view_mode': 'form', 'view_id': ref('student_form_view')})]"/>
    </record>

</odoo>