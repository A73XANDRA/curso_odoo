<odoo>

    <record id = "grades_evaluation_tree_view"
            model = "ir.ui.view">
        <field name = "name">grades.evaluation.tree.view</field>
        <field name = "model">grades.evaluation</field>
        <field name = "arch"
               type = "xml">
            <tree string = "evaluation">
                <field name = "name"/>
                <field name = "date"/>
                <field name = "course_id"/>
                <field name = "observations"/>
            </tree>
        </field>
    </record>

    <record id = "grades_evaluation_action"
            model = "ir.actions.act_window">
        <field name = "name">Evaluation</field>
        <field name = "res_model">grades.evaluation</field>
        <field name = "view_mode">tree,form</field>
    </record>


</odoo>